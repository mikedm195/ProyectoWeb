<form method="post" ng-controller="login">
    <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
            <label for="email">Usuario:</label>
            <input type="text" class="form-control" id="user" ng-model="formData.user">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="pwd" ng-model="formData.password">
        </div>
        <p>{{mensaje}}</p>
        <button type="submit" class="btn btn-default" ng-click="login()">Submit</button>
        <a href="/users/agregarUsuario">Cree una cuenta</a>
    </div>

    <script src="/javascripts/login.js"></script>
</form>
