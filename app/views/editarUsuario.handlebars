<form name="forma" class="col-md-6 col-md-offset-3" method="post">
    User: <input class="form-control"  type="text" id="user" value="{{usuarios.user}}" /><br />
    Password: <input class="form-control" type="text" id="password" value="{{usuarios.password}}" /><br />
    <input class="form-control" type="submit" onclick="sending(event,{{usuarios.id}})" /><br />
</form>

<script>

function sending(evt, id){
    evt.preventDefault();

    var data = {
        user: $("#user").val(),
        password: $("#password").val(),
    }
    $.ajax({
        type: 'PUT',
        url: `http://localhost:3000/users/editarUsuario`,
        data: data,
        dataType: 'json',
        success: function(data){
            window.location.href = "/";
            alert("Usuario editado correctamente");
        },
        error: function(){
            console.log("ERROR");
        }
    });
}
</script>
